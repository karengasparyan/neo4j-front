{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "rootDir": "src",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "declaration": false,
    "composite": false,
    "removeComments": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ],
  "include": [
    "src"
  ]
}
